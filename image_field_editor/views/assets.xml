<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_editor" inherit_id="web.assets_backend" name="Assests">
        <xpath expr="." position="inside">                                                
            <!-- https://github.com/fabricjs/fabric.js/releases -->
            <script type="text/javascript" src="/image_field_editor/static/src/lib/fabric.js"/>

            <!-- https://github.com/nhn/tui.code-snippet/releases/tag/v1.5.0 -->
            <script type="text/javascript" src="/image_field_editor/static/src/lib/tui-code-snippet.js"/>

            <!-- https://github.com/nhn/tui.color-picker/releases/tag/v2.2.6 -->
            <link href="/image_field_editor/static/src/lib/tui-color-picker.css" rel="stylesheet" type="text/css"/>
            <script src="/image_field_editor/static/src/lib/tui-color-picker.js" type="text/javascript" />

            <!-- https://uicdn.toast.com/tui-image-editor/latest/tui-image-editor.css -->
            <link href="/image_field_editor/static/src/lib/tui-image-editor.css" rel="stylesheet" type="text/css"/>
            
            <!-- https://uicdn.toast.com/tui-image-editor/latest/tui-image-editor.js -->
            <script src="/image_field_editor/static/src/lib/tui-image-editor.js" type="text/javascript"/>

            <!-- https://github.com/nhn/tui.image-editor/blob/master/apps/image-editor/examples/js/theme/black-theme.js -->
            <script src="/image_field_editor/static/src/lib/black-theme.js" type="text/javascript"/>

            <!-- https://github.com/eligrey/FileSaver.js -->
            <script src="/image_field_editor/static/src/lib/FileSaver.js" type="text/javascript"/>

            <script src="/image_field_editor/static/src/js/image_field.js" type="text/javascript"/>
        </xpath>
    </template>
</odoo>